{
  "name": "eslint-summary-formatter",
  "version": "0.0.1",
  "description": "ESLint summary formatter aggregating results by rule",
  "main": "index.js",
  "author": "Marton Hipszki <mhipszki@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhipszki/eslint-summary-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/mhipszki/eslint-summary-formatter/issues"
  },
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint .",
    "try": "eslint -f lib/formatter.js . -- $@"
  },
  "keywords": [
    "eslint",
    "summary",
    "formatter",
    "javascript",
    "linting",
    "report"
  ],
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    },
    "rules": {
      "no-console": 0
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.spec.js"
    ]
  },
  "dependencies": {
    "chalk": "^2.0.1",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "eslint": "^4.3.0",
    "jest": "^20.0.4"
  }
}
